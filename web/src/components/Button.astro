---
const { href, text, button_class } = Astro.props;
---

<style>
  /* CSS */
  .regular {
    background-color: #ffffff00;
    padding: 20px 16px;
    border: none;
    color: #94a3b8;
    width: fit-content;
    font-weight: 400;
    font-size: 16px;
  }

  .regular:hover {
    color: #ffffff;
    cursor: pointer;
    transition: 0.3s;
  }

  .hightlighted {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding: 16px 20px;
    gap: 10px;
    font-size: 16px;
    border: none;

    background: #38bdf8;
    border-radius: 8px;
  }

  .hightlighted:hover {
    background: #6dd2ff;
    cursor: pointer;
    transition: 0.3s;
  }

  a {
    font-family: "Playfair";
    font-style: normal;
    color: inherit;
    text-decoration: none;
    background-color: #ffffff00;
  }
</style>

<button class={button_class} role="button"><a href={href}>{text}</a></button>
